<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    tools:context="com.example.ambar.todoapp2.todos">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/addtask"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="@string/addtask">
        </EditText>

        <ImageView
            android:id="@+id/addbutton"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:contentDescription="@string/addtask"
            android:src="@drawable/add1" />
    </LinearLayout>

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/completetodos"
        android:dividerHeight="5.0sp"
        android:divider="#00000000"
        android:childDivider="#00000000"
        android:layout_below="@+id/linearlayout"
        />

    <ListView
        android:id="@+id/todoitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/completetodos"
        android:divider="#00000000"
        android:dividerHeight="5.0sp" />

</RelativeLayout>